<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="textFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="editTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/edittext_border</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:inputType">textCapCharacters</item>

    </style>

    <style name="textFields2">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">17dp</item>
    <item name="android:textColor">@color/black</item>

    </style>

    <style name="editTexts2">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:inputType">textCapCharacters</item>

    </style>

</resources>